{
	// Dev Container name (not Container name)
	"name": "pyspark_dev",
	// Change the default user from root user
	"remoteUser": "vscode", 
	// Specify where in the Container to place the workspace open in VSCode.
	"workspaceFolder": "/home/vscode",
	// Mount setting
	"workspaceMount": "source=${localWorkspaceFolder},target=/home/vscode,type=bind,consistency=cached",
	"build": {
		"dockerfile": "Dockerfile",
		"context": "..",
		"args": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"ms-toolsai.jupyter", 
				"ms-toolsai.jupyter-keymap", 
				"ms-toolsai.jupyter-renderers"
			],
			"settings": {
				"python.defaultInterpreterPath": "/usr/local/bin/python",
				"jupyter.alwaysTrustNotebooks": true
			}
		}
	}
}
